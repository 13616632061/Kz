<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="800dp"
        android:layout_height="wrap_content">

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_kg"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="关闭斤"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <widget.Switch
            android:visibility="gone"
            android:id="@+id/sw_kg"
            android:layout_toRightOf="@+id/tv_kg"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:switch_back_color="#747373"
            app:switch_circle_color="#fff"
            app:switch_main_color="#68b94d"/>

        <TextView
            android:layout_toRightOf="@+id/sw_kg"
            android:id="@+id/tv_company"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="斤"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_weight_name"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:text="商品名称"
            android:layout_centerHorizontal="true"
            android:textColor="@color/color333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/but_cancel_cancel"
            android:text="非记重"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>





    <RelativeLayout
        android:layout_marginTop="60dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_show_Price"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:text="单价："
            android:textColor="@color/color333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_weight_price"
            android:layout_toRightOf="@+id/tv_show_Price"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:text="12"
            android:textColor="@color/color333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tv_show_weight"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:text="重量："
            android:textColor="@color/color333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_weight"
            android:layout_toRightOf="@+id/tv_show_weight"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:text="0.0"
            android:textColor="@color/color333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_danwei"
            android:layout_toRightOf="@+id/tv_weight"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:text="斤"
            android:textColor="@color/color333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tv_weight_total_Price"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:text="0"
            android:textColor="@color/color333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_toLeftOf="@+id/tv_weight_total_Price"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:text="金额："
            android:textColor="@color/color333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />







    </RelativeLayout>





    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:textColor="#ffff8904"
            android:id="@+id/but_cancel"
            android:background="@drawable/btn_gray_less"
            android:layout_marginTop="10dp"
            android:text="取消"
            android:layout_marginRight="250dp"
            android:layout_gravity="center"
            android:layout_width="120dp"
            android:layout_height="80dp" />

        <Button
            android:textColor="#ffff8904"
            android:id="@+id/but_dimdis"
            android:background="@drawable/btn_gray_less"
            android:layout_marginTop="10dp"
            android:text="确定"
            android:layout_marginLeft="250dp"
            android:layout_gravity="center"
            android:layout_width="120dp"
            android:layout_height="80dp" />

    </LinearLayout>




</LinearLayout>