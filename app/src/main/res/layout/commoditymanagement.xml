<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:paddingTop="-15dp"
        android:paddingLeft="-15dp"
        android:paddingRight="-15dp"
        android:background="@drawable/gray_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/but_Cashier"
                android:drawableTop="@drawable/shangpingguangli"
                android:button="@null"
                android:onClick="onclick"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@drawable/text_color"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/collect_money"/>

            <RadioButton
                android:id="@+id/rb_statement"
                android:drawableTop="@drawable/shangpingguangli6"
                android:button="@null"
                android:onClick="onclick"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@drawable/text_color"
                android:text="@string/report_form"/>
            <RadioButton
                android:id="@+id/but_commodity"
                android:drawableTop="@drawable/shangpingguangli2"
                android:button="@null"
                android:textColor="@drawable/text_color"
                android:gravity="center"
                android:onClick="onclick"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/good"/>
