                <!--android:onClick="onclick"-->
                <!--android:gravity="center"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:paddingLeft="10dp"-->
                <!--android:paddingRight="10dp"-->
                <!--android:text="查单"/>-->


            <RadioButton
                android:id="@+id/rl_forthe"
                android:drawableTop="@drawable/shangpingguangli11"
                android:button="@null"
                android:textColor="@drawable/text_color"
                android:onClick="onclick"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/put_into_stock"/>

            <View
                android:background="#fff"
                android:layout_width="1dp"
                android:layout_height="50dp" />

            <!--<RadioButton-->
                <!--android:drawableTop="@drawable/shangpingguangli5"-->
                <!--android:button="@null"-->
                <!--android:onClick="onclick"-->
                <!--android:gravity="center"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:paddingLeft="10dp"-->
                <!--android:paddingRight="10dp"-->
                <!--android:text="库存"/>-->


            <RadioButton
                android:id="@+id/rb_check"
                android:drawableTop="@drawable/shangpingguangli7"
                android:button="@null"
                android:textColor="@drawable/text_color"
                android:onClick="onclick"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/inventory"/>
            <RadioButton
                android:id="@+id/rb_breakage"
                android:drawableTop="@drawable/shangpingguangli8"
                android:button="@null"
                android:textColor="@drawable/text_color"
                android:onClick="onclick"
