<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="onclick"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tab">

        <ImageView
            android:id="@+id/im_huanghui"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="onclick"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/huanghui" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="5dp"
            android:text="@string/change_password"
            android:textColor="#fff"
            android:textSize="22dp" />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/Rl_chang"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:background="@drawable/login">

        <TextView
            android:id="@+id/ed_user"
            android:hint="@string/user_name"
            android:gravity="center_horizontal"
            android:layout_width="304dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/ed_beijin"
            android:padding="10dp"
            android:textColorHint="#bebbbb" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/ed_user"
            android:layout_marginLeft="40dp"
            android:text="@string/account"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/ed_old"
            android:layout_width="304dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ed_user"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="100dp"
            android:background="@drawable/ed_beijin"
            android:inputType="textPassword"
            android:padding="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/ed_old"
            android:layout_marginLeft="30dp"
            android:text="@string/old_password"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/ed_new"
            android:layout_width="304dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ed_old"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ed_beijin"
            android:inputType="textPassword"
            android:padding="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/ed_new"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:text="@string/new_password"
            android:textSize="18dp" />


        <TextView
            android:id="@+id/tv_error"
            android:text=""
            android:visibility="gone"
            android:layout_below="@+id/ed_new"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textSize="16dp"
            android:textColor="#f00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/but_change"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ed_new"
            android:paddingBottom="5dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/logpng"
            android:onClick="onclick"
            android:text="@string/confirm_modify"
            android:textColor="#fff"
            android:textSize="18dp" />
    </RelativeLayout>
</LinearLayout>