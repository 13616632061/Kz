<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/radius_shape_fff"
    android:layout_height="match_parent">

    <TextView
        android:text="商品详情"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="30dp" />


    <LinearLayout
        android:layout_width="600dp"
        android:layout_height="40dp">
        <TextView
            android:text="条码"
            android:layout_margin="5dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:text="商品名"
            android:layout_margin="5dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:text="分类"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:text="报货数量"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:text="验收数量"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:visibility="gone"
            android:text="价格"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:text="操作"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="600dp"
        android:layout_height="400dp">
    <widget.MylistView
        android:id="@+id/lv"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tv_1"
                android:text="共"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_nums"
                android:layout_centerVertical="true"
                android:text="10"
                android:layout_toRightOf="@+id/tv_1"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_2"
                android:layout_centerVertical="true"
                android:text="件商品,"
                android:layout_toRightOf="@+id/tv_nums"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_3"
                android:text="金额合计:￥"
                android:layout_toRightOf="@+id/tv_2"
                android:textSize="20dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_price"
                android:layout_centerVertical="true"
                android:text="400.0"
                android:layout_toRightOf="@+id/tv_3"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/but_acceptance"
                android:text="全部验收"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_select_gray"
                android:layout_width="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="30dp" />

            <Button
                android:id="@+id/but_cancel"
                android:layout_toLeftOf="@+id/but_acceptance"
                android:text="取消"
                android:background="@drawable/btn_select_gray"
                android:layout_width="60dp"
                android:layout_marginLeft="10dp"
                android:layout_height="30dp" />

            <Button
                android:layout_toLeftOf="@+id/but_cancel"
                android:text="打印"
                android:layout_marginBottom="5dp"
                android:background="@drawable/btn_select_gray"
                android:layout_width="60dp"
                android:layout_height="30dp" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>