<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="800dp"
    android:background="@drawable/radius_shape_fff"
    android:layout_height="500dp">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tab">

        <ImageView
            android:id="@+id/im_huanghui"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="onclick"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/huanghui" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="5dp"
            android:text="@string/Barcode_printing"
            android:textColor="#fff"
            android:textSize="22dp" />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <TextView
            android:layout_margin="5dp"
            android:id="@+id/tv_label"
            android:text="@string/Whether_Printer_Super_Label"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <widget.Switch
            android:layout_marginLeft="10dp"
            android:id="@+id/sw6"
            android:layout_toRightOf="@+id/tv_label"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:switch_back_color="#747373"
            app:switch_circle_color="#fff"
            app:switch_main_color="#68b94d" />


        <TextView
            android:id="@+id/tv_price"
            android:layout_toRightOf="@+id/sw6"
            android:layout_margin="5dp"
            android:text="@string/Whether_to_Print_EasyStar_Life"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <widget.Switch
            android:layout_marginLeft="10dp"
            android:id="@+id/sw_price"
            android:layout_toRightOf="@+id/tv_price"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:switch_back_color="#747373"
            app:switch_circle_color="#fff"
            app:switch_main_color="#68b94d" />



        <Button
            android:text="@string/wipe_data"
            android:id="@+id/but_debug"
            android:background="@drawable/btn_gray_less"
            android:layout_toLeftOf="@+id/tv_seek"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />

        <EditText
            android:id="@+id/tv_seek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/ed_beijin"
            android:drawableRight="@drawable/shousuo"
            android:hint="@string/Barcode_Name_Pinyin_Code"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:padding="5dp" />


    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_xuhao"
            android:gravity="center"
            android:text="@string/serial_number"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_name"
            android:gravity="center"
            android:text="@string/title"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_Price"
            android:gravity="center"
            android:text="@string/price"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_Specifications"
            android:gravity="center"
            android:text="@string/specifications"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_unit"
            android:gravity="center"
            android:text="@string/unit"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_code"
            android:gravity="center"
            android:text="@string/bar_code"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_id"
            android:gravity="center"
            android:text="@string/Item_number"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <Button
            android:layout_weight="1.3"
            android:text="@string/Batch_printing"
            android:layout_margin="10dp"
            android:background="@drawable/btn_red"
            android:id="@+id/but_print"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <!--<com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout xmlns:app="http://schemas.android.com/apk/res-auto"-->
        <!--android:id="@+id/refreshLayout"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_weight="1">-->
    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <!--</com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gray2"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/but_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:text="@string/Print_Template_Settings"
            />


        <TextView
            android:id="@+id/tv_zong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_zongliang"
            android:hint="19"
            android:textSize="16dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_zongjin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_zong"
            android:text="@string/Total_purchase_price"
            android:textSize="16dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_jinjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_zongjin"
            android:hint="2222"
            android:textSize="16dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_shoujia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_jinjia"
            android:hint="@string/Total_selling_price"
            android:textSize="16dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_zongshoujia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_shoujia"
            android:hint="111111"
            android:textSize="16dp"
            android:visibility="gone" />

        <!--android:background="@drawable/last"-->
        <Button
            android:id="@+id/but_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:padding="10dp"
            android:text="@string/next_page"
            />

        <TextView
            android:id="@+id/tv_page"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/but_next"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@+id/but_next"
            android:background="@drawable/fubeijin"
            android:gravity="center"
            android:hint="1/5"
            android:textSize="16dp" />
        <!--android:background="@drawable/next"-->
        <Button
            android:id="@+id/but_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/tv_page"
            android:padding="10dp"
            android:text="@string/previous_page"
            />


    </RelativeLayout>

</LinearLayout>