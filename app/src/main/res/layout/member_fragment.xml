<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:background="#f4f4f4"
        android:layout_width="137dp"
        android:layout_height="match_parent">

        <TextView
            android:text="@string/members"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="37dp" />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/but_member"
                android:text="@string/Membership_management"
                android:button="@null"
                android:gravity="center"
                android:background="#ffffff"
                android:textColor="@drawable/text_color"
                android:layout_width="137dp"
                android:layout_height="37dp" />
            <ImageView
                android:id="@+id/im_di1"
                android:layout_width="100dp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/but_di"/>
            <View
                android:background="#f4f4f4"
                android:layout_width="137dp"
                android:layout_height="1dp"/>

            <RadioButton
                android:id="@+id/but_integral"
                android:text="@string/exchange"
                android:button="@null"
                android:gravity="center"
                android:background="#ffffff"
                android:textColor="@drawable/text_color"
                android:layout_width="137dp"
                android:layout_height="37dp" />
            <ImageView
                android:id="@+id/im_di3"
                android:layout_width="100dp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/but_di"/>
            <View
                android:background="#f4f4f4"
                android:layout_width="137dp"
                android:layout_height="1dp"/>


            <RadioButton
                android:id="@+id/but_eductible"
                android:text="@string/Deduction_specifications"
                android:button="@null"
                android:gravity="center"
                android:background="#ffffff"
                android:textColor="@drawable/text_color"
                android:layout_width="137dp"
                android:layout_height="37dp" />
            <ImageView
                android:id="@+id/im_di5"
                android:layout_width="100dp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/but_di"/>
            <View
                android:background="#f4f4f4"
                android:layout_width="137dp"
                android:layout_height="1dp"/>


            <RadioButton
                android:id="@+id/but_specification"
                android:text="@string/Recharge_specifications"
                android:button="@null"
                android:gravity="center"
                android:background="#ffffff"
                android:textColor="@drawable/text_color"
                android:layout_width="137dp"
                android:layout_height="37dp" />
            <ImageView
                android:id="@+id/im_di4"
                android:layout_width="100dp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/but_di"/>
            <View
                android:background="#f4f4f4"
                android:layout_width="137dp"
                android:layout_height="1dp"/>


            <RadioButton
                android:id="@+id/but_detail"
                android:text="@string/Detailed_statement"
                android:button="@null"
                android:gravity="center"
                android:background="#ffffff"
                android:textColor="@drawable/text_color"
                android:layout_width="137dp"
                android:layout_height="37dp" />
            <ImageView
                android:id="@+id/im_di2"
                android:layout_width="100dp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/but_di"/>
            <View
                android:background="#f4f4f4"
                android:layout_width="137dp"
                android:layout_height="1dp"/>

        </RadioGroup>


    </LinearLayout>

    <FrameLayout
        android:id="@+id/rl_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>