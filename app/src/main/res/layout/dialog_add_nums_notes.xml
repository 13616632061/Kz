<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_whilte_red"
        android:layout_width="800dp"
        android:layout_height="300dp">
       <TextView
           android:layout_marginLeft="155dp"
           android:id="@+id/tv_goodsname"
           android:textSize="20sp"
           android:textColor="#000000"
           android:layout_marginTop="25dp"
           android:text="商品名字"
           android:lines="1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/layout_nums"
            android:layout_below="@+id/tv_goodsname"
            android:layout_marginTop="45dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:textSize="16sp"
                android:layout_marginLeft="45dp"
                android:text="数量："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:layout_marginLeft="30dp"
                android:layout_marginRight="5dp"
                android:textColor="#adadad"
                android:background="@drawable/btn_select_gray"
                android:textSize="20sp"
                android:text="一"
                android:id="@+id/btn_cell"
                android:layout_width="32dp"
                android:layout_height="32dp" />
            <EditText
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:lines="1"
                android:inputType="number"
                android:id="@+id/et_nums"
                android:background="@drawable/edit_frame"
                android:layout_width="60dp"
                android:layout_height="28dp" />
            <Button
                android:layout_marginLeft="20dp"
                android:textColor="#ffffff"
                android:background="@drawable/btn_select_red"
                android:textSize="20sp"
                android:text="+"
                android:id="@+id/btn_add"
                android:layout_width="32dp"
                android:layout_height="32dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/layout_nums"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:layout_marginLeft="45dp"
                android:text="备注："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:textSize="16sp"
                android:hint="请输入备注内容"
                android:layout_marginLeft="25dp"
                android:gravity="center"
                android:selectAllOnFocus="true"
                android:lines="1"
                android:id="@+id/et_notes"
                android:background="@drawable/edit_frame"
                android:layout_width="180dp"
                android:layout_height="35dp" />
        </LinearLayout>
        <Button
            android:layout_marginBottom="30dp"
            android:layout_alignParentBottom="true"
            android:textSize="18sp"
            android:background="@drawable/btn_gray_less"
            android:layout_marginLeft="60dp"
            android:id="@+id/btn_cell_dialog"
            android:text="取消"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
        <Button
            android:layout_marginBottom="30dp"
            android:layout_alignParentBottom="true"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:background="@drawable/btn_red"
            android:layout_marginLeft="60dp"
            android:layout_toRightOf="@+id/btn_cell_dialog"
            android:id="@+id/btn_sure_dialog"
            android:text="确定"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/btn_delete"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:background="@drawable/btn_red"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="25dp"
            android:text="删除"
            android:layout_marginRight="200dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/tv_notes"
            android:textColor="#ffff8904"
            android:textSize="14sp"
            android:layout_marginRight="200dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="100dp"
            android:text="常用备注:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <GridView
            android:layout_marginRight="35dp"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:verticalSpacing="5dp"
            android:horizontalSpacing="5dp"
            android:id="@+id/gv_common_notes"
            android:layout_toRightOf="@+id/btn_sure_dialog"
            android:layout_below="@+id/tv_notes"
            android:numColumns="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></GridView>
    </RelativeLayout>



</RelativeLayout>