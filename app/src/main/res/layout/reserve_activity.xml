<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/radius_shape_fff"
    android:layout_width="680dp"
    android:layout_height="600dp">

    <android.support.v7.widget.Toolbar
        android:background="#ffffff"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_biaoti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Scheduled_list"
            android:textSize="24dp" />


        <CheckBox
            android:id="@+id/cc_box"
            android:text="@string/whole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_huanghui"
            android:layout_gravity="right"
            android:text="X"
            android:textSize="26dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.Toolbar>



    <widget.MylistView
        android:id="@+id/lv_reserve"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></widget.MylistView>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/btn_reserve"
            android:textColor="#ffffff"
            android:background="@drawable/btn_orange"
            android:text="@string/Reserve"
            android:layout_width="120dp"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/but_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:text="@string/next_page"
            />

        <TextView
            android:id="@+id/tv_page"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/but_next"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@+id/but_next"
            android:background="@drawable/fubeijin"
            android:gravity="center"
            android:hint="0/0"
            android:textSize="16dp" />
        <Button
            android:id="@+id/but_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/tv_page"
            android:padding="10dp"
            android:text="@string/previous_page"
            />


    </RelativeLayout>

</LinearLayout>