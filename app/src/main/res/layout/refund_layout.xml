    <RelativeLayout
        android:id="@+id/Rl_fangshi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="@string/Method_of_refund"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="@string/cash"
            android:textSize="18dp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/Rl_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:text="@string/Number_of_applications"
             />


        <ImageView
            android:id="@+id/im_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/add" />

        <TextView
            android:id="@+id/tv_nums"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/im_add"
            android:background="#ffffff"
            android:gravity="center"
            android:text="2"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/im_reductionof"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/tv_nums"
            android:src="@drawable/reductionof" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_wenti"
            android:text="@string/Problem_description"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <EditText
            android:id="@+id/ed_describe"
            android:gravity="left"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/tv_wenti"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <Button
            android:text="@string/submit"
            android:background="@drawable/but_fenlei"
            android:layout_below="@+id/ed_describe"
            android:layout_centerHorizontal="true"
            android:id="@+id/but_submit"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="130dp"
            android:layout_height="wrap_content" />

    </RelativeLayout>





</LinearLayout>