        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="180dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_g"
        android:text="克"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
