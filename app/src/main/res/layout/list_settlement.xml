<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/cc_box"
            android:padding="3dp"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_name"
            android:gravity="center"
            android:padding="3dp"
            android:layout_margin="5dp"
            android:text="供应商"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_bncode"
            android:gravity="center"
            android:padding="3dp"
            android:layout_margin="5dp"
            android:text="货流单号"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_time"
            android:gravity="center"
            android:padding="3dp"
            android:layout_margin="5dp"
            android:text="下单时间"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_nums"
            android:gravity="center"
            android:padding="3dp"
            android:layout_margin="5dp"
            android:text="货流量"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_linkman"
            android:gravity="center"
            android:padding="3dp"
            android:layout_margin="5dp"
            android:text="联系人"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_phone"
            android:gravity="center"
            android:padding="3dp"
            android:layout_margin="5dp"
            android:text="电话"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_total"
            android:gravity="center"
            android:padding="3dp"
            android:layout_margin="5dp"
            android:text="总价"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_status"
            android:gravity="center"
            android:padding="3dp"
            android:layout_margin="5dp"
            android:text="订单状态"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/but_operation"
            android:gravity="center"
            android:padding="3dp"
            android:layout_margin="5dp"
            android:text="详情"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp" />
    </LinearLayout>

</LinearLayout>