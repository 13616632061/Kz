<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/radius_shape_fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_check"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:visibility="gone"
                android:id="@+id/ed_page"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:inputType="number"
                android:hint="请输入条码后几位"
                android:layout_gravity="center_horizontal"
                android:background="#ffffff"
                android:layout_height="40dp" />
            <EditText
                android:id="@+id/ed_name"
                android:layout_width="match_parent"
                android:textSize="16sp"
                android:hint="商品名/拼音码/条码"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_edittext"
                android:layout_height="40dp" />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        <Button
            android:id="@+id/but_abolish"
            android:layout_marginLeft="10dp"
            android:text="取消"
            android:background="@drawable/but_fenlei"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            />

            <Button
                android:id="@+id/but_goto"
                android:text="确定"
                android:layout_marginLeft="10dp"
                android:background="@drawable/but_fenlei"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                />


        </LinearLayout>

    </LinearLayout>

    <widget.MylistView
        android:id="@+id/lv_fuzzy"
        android:layout_gravity="center_horizontal"
        android:layout_width="500dp"
        android:layout_height="wrap_content"/>


</LinearLayout>