<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#f1f1f1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:gravity="center_vertical"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:background="@drawable/btn_whilte_gray"
            android:layout_marginLeft="15dp"
            android:id="@+id/layout_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/more"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:textSize="16sp"
                android:text="更多"
                android:textColor="#adadad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/btn_whilte_gray"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:id="@+id/layout_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/people"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/tv_logn_name"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:textSize="16sp"
                android:text=""
                android:textColor="#adadad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/btn_whilte_gray"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:id="@+id/layout_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/log_out"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:text="登出"
                android:textColor="#adadad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <RelativeLayout
            android:id="@+id/layout_order_nums"
            android:background="#ffffff"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:id="@+id/tv_ordernums"
                android:textSize="16sp"
                android:textColor="#adadad"
                android:text="- -"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="15dp"
                android:layout_alignParentBottom="true"
                android:textSize="16sp"
                android:textColor="#adadad"
                android:id="@+id/tv_ordertime"
                android:text="- - - -"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:gravity="center_horizontal"
            android:id="@+id/layout_peoplenums"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/layout_order_nums"
            android:background="#ffffff"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/tv_people"
                android:textSize="16sp"
                android:textColor="#adadad"
                android:text="人数"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="15dp"
                android:layout_alignParentBottom="true"
                android:id="@+id/tv_peoplenums"
                android:digits="0123456789"
                android:textStyle="bold"
                android:textSize="25sp"
                android:lines="1"
                android:text="- -"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:gravity="center_horizontal"
            android:id="@+id/layout_tablenums"
            android:layout_marginLeft="2dp"
            android:layout_alignParentRight="true"
            android:background="#ffffff"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/tv_table"
                android:textColor="#adadad"
                android:textSize="16sp"
                android:text="桌号"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginBottom="15dp"
                android:layout_alignParentBottom="true"
                android:id="@+id/tv_tablenums"
                android:text="- -"
                android:lines="1"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="2dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_goods"
            android:layout_marginTop="10dp"
            android:textColor="#adadad"
            android:textSize="16sp"
            android:text="商品："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_goods"
            android:id="@+id/tv_goods_nums"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="25sp"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/tv_goods_nums"
            android:id="@+id/tv_total"
            android:layout_marginTop="10dp"
            android:textColor="#adadad"
            android:textSize="16sp"
            android:text="合计："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_total_money"
            android:layout_marginTop="10dp"
            android:textColor="#ffff8904"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="￥0.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/tv_dopackage"
            android:layout_marginTop="15dp"
            android:textColor="#00cc00"
            android:textSize="25sp"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
<RelativeLayout
    android:layout_marginTop="2dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.baoyz.swipemenulistview.SwipeMenuListView
        android:id="@+id/list_ordergoods"
        android:layout_above="@+id/layout_bottom"
        android:background="@android:color/transparent"
        android:scrollbarFadeDuration="0"
        android:fadeScrollbars="false"
        android:scrollingCache="false"
        android:animationCache="false"
        android:smoothScrollbar="true"
        android:dividerHeight="1dp"
        android:divider="#f1f1f1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <Button
            android:id="@+id/but_set_print"
            android:layout_marginBottom="5dp"
            android:background="@drawable/btn_whilte_red"
            android:text="打印"
            android:layout_width="80dp"
            android:layout_height="45dp" />


        <Button
            android:id="@+id/btn_do_package"
            android:layout_marginBottom="5dp"
            android:background="@drawable/btn_whilte_red"
            android:text="打包"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="45dp" />
        <Button
            android:id="@+id/btn_do_order"
            android:layout_marginBottom="5dp"
            android:background="@drawable/btn_whilte_red"
            android:text="挂单"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="45dp" />
    </LinearLayout>
</RelativeLayout>
</LinearLayout>