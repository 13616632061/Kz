<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_scan"
        android:textSize="25sp"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:text="向我扫码付钱"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:background="@drawable/blue"
        android:id="@+id/iv_paycode"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_scan"
        android:layout_width="160dp"
        android:layout_height="160dp" />
    <TextView
        android:id="@+id/tv_money"
        android:textColor="#ff0000"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv_paycode"
        android:text="￥35.00"
        android:textSize="45sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/tv_supply"
        android:paddingRight="150dp"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_money"
        android:textColor="#adadad"
        android:text="支持："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:paddingLeft="15dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tv_supply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:gravity="center_horizontal"
        android:id="@+id/layout_zhifubao"
        android:layout_width="80dp"
        android:layout_height="80dp">
        <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/iv_zhifubao"
            android:src="@drawable/zhifubao"
            android:layout_width="45dp"
            android:layout_height="45dp" />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_below="@+id/iv_zhifubao"
            android:layout_centerHorizontal="true"
            android:text="支付宝支付"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/layout_zhifubao"
        android:id="@+id/layout_weixin"
        android:layout_width="80dp"
        android:layout_height="80dp">
        <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/iv_weixin"
            android:src="@drawable/weixin"
            android:layout_width="45dp"
            android:layout_height="45dp" />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_below="@+id/iv_weixin"
            android:layout_centerHorizontal="true"
            android:text="微信支付"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    </RelativeLayout>
    <Button
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_continue"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:text="我还要买"
        android:background="@drawable/btn_blue"
        android:layout_centerInParent="true"
        android:layout_width="300dp"
        android:layout_height="48dp" />
    <Button
        android:layout_marginBottom="40dp"
        android:layout_marginRight="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_cell"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:text="取消订单"
        android:background="@drawable/btn_gray"
        android:layout_centerInParent="true"
        android:layout_width="150dp"
        android:layout_height="48dp" />

</RelativeLayout>