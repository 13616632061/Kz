<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:background="@drawable/gray1">

        <Button
            android:id="@+id/but_sms"
            android:layout_toLeftOf="@+id/tv_seek"
            android:onClick="but_export"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/but_fenlei"
            android:text="全部发送" />

        <EditText
            android:id="@+id/tv_seek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/ed_beijin"
            android:drawableRight="@drawable/shousuo"
            android:hint="手机号"
            android:imeOptions="actionSearch"
            android:padding="5dp"
            android:singleLine="true" />


    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/cb_box"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/colormain"
            />
        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_xuhao"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="序号"
            android:textSize="20dp"
            android:padding="5dp"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="会员名"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="20dp"
            android:padding="5dp"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="时间"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="20dp"
            android:padding="5dp"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/tv_phone"
            android:gravity="center_horizontal"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textSize="20dp"
            android:padding="5dp"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/tv_score"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="积分"
            android:textSize="20dp"
            android:padding="5dp"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/tv_balance"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="余额"
            android:textSize="20dp"
            android:padding="5dp"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/tv_grade"
            android:gravity="center_horizontal"
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="等级"
            android:textSize="20dp"
            android:padding="5dp"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/tv_discount"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="折扣率"
            android:textSize="20dp"
            android:padding="5dp"
            android:layout_margin="5dp"/>
        <TextView
            android:gravity="center_horizontal"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="编辑"
            android:textSize="20dp"
            android:padding="5dp"
            android:layout_margin="5dp"/>


    </LinearLayout>
    <View
        android:background="#f4f4f4"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <ListView
        android:id="@+id/lv_member"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <RelativeLayout
        android:background="@drawable/gray2"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="共"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_shuliang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_1"
            android:layout_centerVertical="true"
            android:hint="16"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_zongliang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_shuliang"
            android:text="会员"
            android:layout_centerVertical="true"
            android:textSize="16dp" />
        <Button
            android:id="@+id/but_Newmembers"
            android:layout_toRightOf="@+id/tv_zongliang"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/but_fenlei"
            android:text="新增会员" />

        <Button
            android:id="@+id/but_lv_member"
            android:layout_toRightOf="@+id/but_Newmembers"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/but_fenlei"
            android:text="会员等级" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_zong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_zongliang"
            android:hint="19"
            android:layout_centerVertical="true"
            android:textSize="16dp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_zongjin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_zong"
            android:text="总进价:"
            android:layout_centerVertical="true"
            android:textSize="16dp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_jinjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_zongjin"
            android:hint="2222"
            android:layout_centerVertical="true"
            android:textSize="16dp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_shoujia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_jinjia"
            android:hint="总售价:"
            android:layout_centerVertical="true"
            android:textSize="16dp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_zongshoujia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_shoujia"
            android:hint="111111"
            android:layout_centerVertical="true"
            android:textSize="16dp" />

        <!--android:background="@drawable/last"-->
        <Button
            android:id="@+id/but_next"
            android:text="下一页"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />

        <TextView
            android:id="@+id/tv_page"
            android:layout_width="70dp"
            android:background="@drawable/fubeijin"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/but_next"
            android:layout_toLeftOf="@+id/but_next"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:hint="1/5"
            android:textSize="16dp" />
        <!--android:background="@drawable/next"-->
        <Button
            android:id="@+id/but_last"
            android:text="上一页"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv_page"
            />

        <Button
            android:id="@+id/but_tolead"
            android:onClick="but_import"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/but_last"
            android:background="@drawable/but_fenlei"
            android:text="导出模板" />

        <Button
            android:id="@+id/but_derive"
            android:onClick="but_export"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/but_tolead"
            android:background="@drawable/but_fenlei"
            android:text="导入会员" />


    </RelativeLayout>


</LinearLayout>