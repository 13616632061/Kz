<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:background="#f1f1f1">

        <Button
            android:id="@+id/but_classification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/but_comm"
            android:text="@string/Classified_sales" />

        <EditText
            android:id="@+id/ed_seek"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:background="@drawable/fubeijin"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/shousuo"
            android:gravity="center_vertical"
            android:hint="@string/goods_name"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:textColorHint="#bebbbb" />

        <TextView
            android:id="@+id/tv_classify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@+id/ed_seek"
            android:background="@drawable/spinnbeiji"
            android:drawableRight="@drawable/spinn"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="@string/Commodity_classification" />

        <TextView
            android:id="@+id/tv_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@+id/tv_classify"
            android:background="@drawable/spinnbeiji"
            android:drawableRight="@drawable/spinn"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="@string/order" />

        <TextView
            android:id="@+id/tv_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@+id/tv_volume"
            android:background="@drawable/spinnbeiji"
            android:drawableRight="@drawable/spinn"
            android:padding="5dp"
            android:paddingRight="5dp"
            android:text="@string/All_tags"
            android:visibility="gone" />
        <CheckBox
            android:layout_toLeftOf="@+id/tv_volume"
            android:text="@string/No_Sales_Goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/serial_number" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/Trade_name" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/Commodity_bar_code" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/Commodity_classification" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/Existing_inventory" />

        <TextView
            android:id="@+id/tv_rank"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableRight="@drawable/rank"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/Sales_volumes" />

        <TextView
            android:id="@+id/tv_total"
            android:drawableRight="@drawable/rank"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/Total_commodity_price" />

        <TextView
            android:id="@+id/tv_receipts"
            android:drawableRight="@drawable/rank"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/Amount_received" />
        <!--<TextView-->
        <!--android:layout_weight="1"-->
        <!--android:text="实收占比"-->
        <!--android:padding="5dp"-->
        <!--android:gravity="center"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="wrap_content" />-->
        <TextView
            android:id="@+id/tv_return"
            android:drawableRight="@drawable/rank"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/profit" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/Profit_margin"
            android:visibility="gone" />
        <TextView
            android:id="@+id/tv_filtrate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/screen" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f1f1f1" />

    <RelativeLayout
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        >

    <ListView
        android:layout_height="match_parent"
        android:id="@+id/lv"
        android:layout_width="match_parent"
         />

        <TextView
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:id="@+id/tv_tishi"
            android:textSize="30dp"
            android:text="@string/No_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f1f1f1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/but_fenlei"
            android:text="@string/Reconciliation_export"
            android:visibility="gone" />


    </RelativeLayout>

</LinearLayout>