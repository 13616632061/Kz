<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/layout_bottom"
        android:background="#f1f1f1f1"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <Button
            android:text="搜索"
            android:id="@+id/btn_search"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:background="@drawable/cc_di"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <Button
            android:layout_toRightOf="@+id/btn_search"
            android:text="同步"
            android:id="@+id/btn_refresh"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:background="@drawable/cc_di"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <Button
            android:text="锁屏"
            android:id="@+id/btn_lock_screen"
            android:layout_toRightOf="@+id/btn_refresh"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:background="@drawable/cc_di"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <Button
            android:text="钱箱"
            android:layout_toRightOf="@+id/btn_lock_screen"
            android:id="@+id/btn_moneybox"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:background="@drawable/cc_di"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <Button
            android:visibility="gone"
            android:text="打印"
            android:layout_toRightOf="@+id/btn_moneybox"
            android:id="@+id/btn_printer"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:background="@drawable/cc_di"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <Button
            android:text="订单"
            android:layout_toRightOf="@+id/btn_printer"
            android:id="@+id/btn_order"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:background="@drawable/cc_di"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <Button
            android:id="@+id/but_huiyuan"
            android:text="会员"
            android:layout_toRightOf="@+id/btn_order"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:background="@drawable/cc_di"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <Button
            android:visibility="gone"
            android:textSize="12sp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/btn_printer"
            android:id="@+id/btn_ordersnums"
            android:text=""
            android:textColor="#ffffff"
            android:background="@drawable/btn_circle_red"
            android:layout_width="22dp"
            android:layout_height="22dp" />
        <Button
            android:textColor="#000000"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:text="餐桌"
            android:id="@+id/btn_table"
            android:layout_centerVertical="true"
            android:background="@drawable/cc_di"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <Button
            android:textColor="#ffffff"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/btn_table"
            android:text="点菜"
            android:id="@+id/btn_dish"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_whilte_orange_circle"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>