    <VideoView

        android:id="@+id/vv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:visibility="invisible"
        android:background="#fff"
        android:id="@+id/imgage"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <LinearLayout
        android:visibility="gone"
        android:orientation="vertical"
        android:background="#fff"
        android:id="@+id/ll"
        android:layout_marginLeft="400px"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="80dp"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"
            android:textColor="#666666"
            android:text="@string/Pay_me_for_scavenging"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/im_erweima"
            android:src="@drawable/erweima"
            android:background="@drawable/erweimabeijin"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:layout_width="130dp"
            android:layout_height="130dp" />

        <TextView
            android:id="@+id/tv_jiner"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:textSize="32dp"
            android:text=""
            android:textColor="#666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="18dp"
            android:layout_marginTop="35dp"
            android:text="@string/Two_dimensional_code_support"
            android:textColor="#666666"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <!--<Button-->
                <!--android:text="QQ"-->
                <!--android:background="#fff"-->
                <!--android:layout_margin="5dp"-->
                <!--android:textSize="22dp"-->
                <!--android:textColor="#d4d4d4"-->
                <!--android:paddingBottom="10dp"-->
                <!--android:drawableTop="@drawable/qq"-->
                <!--android:layout_width="80dp"-->
                <!--android:layout_height="100dp" />-->
            <LinearLayout
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/qq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="QQ"
                    android:textColor="#666666"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <!--<Button-->
                <!--android:text="微信"-->
                <!--android:textSize="22dp"-->
                <!--android:background="#fff"-->
                <!--android:layout_margin="5dp"-->
                <!--android:textColor="#d4d4d4"-->
                <!--android:paddingBottom="10dp"-->
                <!--android:drawableTop="@drawable/weixin"-->
                <!--android:layout_width="80dp"-->
                <!--android:layout_height="100dp" />-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/weixin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="@string/WeChat"
                    android:textColor="#666666"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <!--<Button-->
                <!--android:text="支付宝"-->
                <!--android:textColor="#d4d4d4"-->
                <!--android:textSize="22dp"-->
                <!--android:background="#fff"-->
                <!--android:paddingBottom="10dp"-->
                <!--android:layout_margin="5dp"-->
                <!--android:drawableTop="@drawable/zhifubao"-->
                <!--android:layout_width="80dp"-->
                <!--android:layout_height="100dp" />-->

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/zhifubao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="@string/Alipay"
                    android:textColor="#666666"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_xianjin"
        android:background="#ffffff"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginLeft="400px"
        android:layout_height="match_parent">

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_succeed"
            android:layout_marginTop="160dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/succ"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:text="@string/pay_success"
                android:layout_marginLeft="40dp"
                android:textSize="28px"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_payment"
            android:orientation="vertical"
            android:layout_marginTop="160dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#f00"
                android:text="@string/In_payment"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_paymaoney"
                android:textColor="#000000"
                android:layout_marginTop="50dp"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!--显示自己的二维码-->
        <LinearLayout
            android:id="@+id/ll_code"
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_marginTop="160dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/img_alipay"
                    android:layout_width="180dp"
                    android:layout_height="180dp" />

                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/zhifubao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="@string/Alipay"
                    android:textColor="#666666"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/img_wechat"
                    android:layout_width="180dp"
                    android:layout_height="180dp" />

                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/weixin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="@string/WeChat"
                    android:textColor="#666666"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/order_"
                android:textSize="12px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_order_id"
                android:text=""
                android:textSize="12px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/date_"
                android:textSize="12px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_payed_time"
                android:text=""
                android:textSize="12px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <Button
            android:visibility="gone"
            android:id="@+id/but_xianjin"
            android:layout_marginTop="70dp"
            android:background="@color/colormain"
            android:layout_gravity="center"
            android:text="@string/Close_in_a_second"
            android:textColor="#ffffff"
            android:textSize="22dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

      <com.romainpiel.shimmer.ShimmerTextView xmlns:app="http://schemas.android.com/apk/res-auto"
          android:visibility="gone"
          android:id="@+id/tv_shimmer"
          android:textSize="40dp"
          android:layout_marginTop="20dp"
          android:layout_gravity="center_horizontal"
          android:text="@string/Easy_Star_Life"
          app:reflectionColor="#FF6501"
          android:textColor="#ffffff"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/ll_member"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_member"
        android:src="@mipmap/member"
        android:layout_margin="20dp"
        android:layout_width="80dp"
        android:layout_height="80dp" />

        <TextView
            android:layout_gravity="center_horizontal"
            android:text="会员码"
            android:background="@drawable/main"
            android:textColor="@color/color333"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</RelativeLayout>