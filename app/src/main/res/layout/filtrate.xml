        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <widget.MyGirdView
                android:id="@+id/gv_3"
                android:numColumns="4"
                android:layout_width="400dp"
                android:layout_height="wrap_content"></widget.MyGirdView>
        </ScrollView>

    </LinearLayout>
        <View
            android:background="#f4f4f4"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/but_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="今天"
                android:textSize="22dp" />

            <Button
                android:id="@+id/but_triduum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="近三天"
                android:textSize="22dp" />

            <Button
                android:id="@+id/but_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="本周"
                android:textSize="22dp" />

            <Button
                android:id="@+id/but_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="本月"
                android:textSize="22dp" />

            <Button
                android:id="@+id/but_lastmonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="上月"
                android:textSize="22dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="起始时间" />

            <EditText
                android:id="@+id/tv_timestart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="2017年03月30日 08：08：08" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="结束时间" />

            <EditText
                android:id="@+id/tv_timeend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="2017年03月30日 08：08：08" />

        </LinearLayout>


