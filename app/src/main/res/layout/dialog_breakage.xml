<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_name"
            android:text="商品名称"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
       <ImageView
           android:layout_margin="5dp"
           android:layout_toRightOf="@+id/tv_name"
           android:layout_width="30dp"
           android:layout_height="30dp" />

        <EditText
            android:id="@+id/ed_bncode"
            android:hint="商品条码"
            android:background="@drawable/fubeijin"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:layout_alignParentRight="true"
            android:layout_width="150dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="#f4f4f4"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:text="申请数量"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/im_reductionof"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ed_number"
            android:src="@drawable/reductionof"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:gravity="center"
            android:id="@+id/ed_number"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:background="#ffffff"
            android:layout_toLeftOf="@+id/im_add"
            android:layout_width="50dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/im_add"
            android:src="@drawable/add"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="#f4f4f4"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:background="#f4f4f4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_title"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:text="问题描述"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/ed_content"
            android:background="#ffffff"
            android:hint="请输入问题描述"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_title"
            android:gravity="left"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="130dp" />
        <Button
            android:id="@+id/but_submit"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="提交"
            android:textColor="#ffffff"
            android:layout_below="@+id/ed_content"
            android:background="@drawable/but_fenlei"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />

    </RelativeLayout>


</LinearLayout>