<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="137dp"
        android:background="#f4f4f4"
        android:layout_height="match_parent">
        <TextView
            android:text="商品分类"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="37dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f1f1f1"/>
        <ListView
            android:id="@+id/lv_check"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:background="#f4f4f4"
            android:layout_width="match_parent"
            android:layout_height="37dp">
            <EditText
                android:id="@+id/ed_seek"
                android:layout_width="250dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:layout_centerInParent="true"
                android:background="@drawable/fubeijin"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/shousuo"
                android:gravity="center_vertical"
                android:hint="商品名/商品编码/订单编号"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:textColorHint="#bebbbb" />
        </RelativeLayout>

        <GridView
            android:id="@+id/lv_zhu"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_stock"
                android:layout_centerVertical="true"
                android:text="已盘点:"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_stock_nums"
                android:text="100"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_total"
                android:layout_toRightOf="@+id/tv_stock_nums"
                android:text="总库存:"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_total_nums"
                android:text="888"
                android:layout_toRightOf="@+id/tv_total"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_normal"
                android:text="库存正常:"
                android:layout_toRightOf="@+id/tv_total_nums"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_normal_nums"
                android:text="100"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:layout_toRightOf="@+id/tv_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/but_nextstep"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textColor="#ffffff"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/but_fenlei"
                android:text="下一步" />

        </RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

</RelativeLayout>
    </LinearLayout>



</LinearLayout>