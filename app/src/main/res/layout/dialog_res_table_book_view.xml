<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/layout_dialog"
        android:layout_centerHorizontal="true"
        android:background="@drawable/whitle_icon"
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_width="600dp"
        android:layout_height="450dp">
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:background="#ff00"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/tv_title"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:layout_centerInParent="true"
                android:text="餐桌预定"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="编辑"
                android:id="@+id/tv_edit"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:textColor="#000000"
                android:textSize="16sp"
                android:id="@+id/tv_book_table_people"
                android:layout_marginLeft="25dp"
                android:layout_centerVertical="true"
                android:text="预定人"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_book_table_people"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="95dp"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:textColor="#ff0000"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_book_table_people"
                android:hint="预定人姓名"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="#cdcdcd"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View><RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textColor="#000000"
            android:textSize="16sp"
            android:id="@+id/tv_book_table_phone"
            android:layout_marginLeft="25dp"
            android:layout_centerVertical="true"
            android:text="联系方式"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_book_table_phone"
            android:inputType="number"
            android:background="@null"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="80dp"
            android:textSize="16sp"
            android:textColor="#ff0000"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_book_table_phone"
            android:hint="预定人电话"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
        <View
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="#cdcdcd"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textColor="#000000"
            android:textSize="16sp"
            android:id="@+id/tv_book_table_peoplenums"
            android:layout_marginLeft="25dp"
            android:layout_centerVertical="true"
            android:text="就餐人数"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_book_table_peoplenums"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="80dp"
            android:textSize="16sp"
            android:background="@null"
            android:inputType="number"
            android:textColor="#ff0000"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_book_table_peoplenums"
            android:hint="输入就餐人数"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
        <View
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="#cdcdcd"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>
        <RelativeLayout
            android:id="@+id/layout_booktable_time"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textColor="#000000"
            android:textSize="16sp"
            android:id="@+id/tv_book_table_time"
            android:layout_marginLeft="25dp"
            android:layout_centerVertical="true"
            android:text="就餐时间"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/et_book_table_date"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="80dp"
            android:textSize="16sp"
            android:background="@null"
            android:inputType="number"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_book_table_time"
            android:textColor="#0000ff"
            android:text="选择就餐时间"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>
        <View
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="#cdcdcd"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textColor="#000000"
            android:textSize="16sp"
            android:id="@+id/tv_table_book_money"
            android:layout_marginLeft="25dp"
            android:layout_centerVertical="true"
            android:text="定金"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_table_book_money"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="110dp"
            android:textSize="16sp"
            android:inputType="number"
            android:background="@null"
            android:textColor="#ff0000"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_table_book_money"
            android:hint="输入预定定金（没有定金，请输入0）"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
        <View
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="#cdcdcd"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>
        <RelativeLayout
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_marginLeft="25dp"
                android:id="@+id/btn_cell"
                android:layout_marginBottom="15dp"
                android:textSize="16sp"
                android:textColor="#ff0000"
                android:background="@drawable/btn_gray_less"
                android:text="取消"
                android:layout_width="180dp"
                android:layout_height="40dp" />
            <Button
                android:layout_marginRight="25dp"
                android:layout_alignParentRight="true"
                android:id="@+id/btn_sure"
                android:layout_marginBottom="15dp"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:background="@drawable/btn_red"
                android:text="确定"
                android:layout_width="180dp"
                android:layout_height="40dp" />

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>