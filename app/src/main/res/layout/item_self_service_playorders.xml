<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:minHeight="80dp"
    android:layout_height="80dp">
    <TextView
        android:layout_toLeftOf="@+id/btn_cell"
        android:id="@+id/tv_goodsname"
        android:layout_marginLeft="15dp"
        android:textSize="20sp"
        android:lines="1"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_alignParentBottom="true"
        android:id="@+id/tv_goods_size"
        android:layout_marginLeft="15dp"
        android:textSize="16sp"
        android:lines="1"
        android:textColor="#00cc00"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_toRightOf="@+id/tv_goods_size"
        android:layout_alignParentBottom="true"
        android:id="@+id/tv_goodsnotes"
        android:layout_marginLeft="5dp"
        android:textSize="16sp"
        android:lines="1"
        android:textColor="#00cc00"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_goodsprice"
        android:layout_marginRight="15sp"
        android:layout_alignParentRight="true"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:text=""
        android:layout_width="70dp"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginRight="30dp"
        android:textColor="#ffffff"
        android:background="@drawable/btn_select_red"
        android:textSize="25sp"
        android:text="+"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tv_goodsprice"
        android:id="@+id/btn_add"
        android:layout_width="35dp"
        android:layout_height="35dp" />
    <EditText
        android:gravity="center"
        android:id="@+id/et_nums"
        android:background="@drawable/edit_frame"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/btn_add"
        android:layout_width="60dp"
        android:layout_height="35dp" />
    <Button
        android:layout_marginRight="5dp"
        android:textColor="#adadad"
        android:background="@drawable/btn_select_gray"
        android:textSize="20sp"
        android:text="一"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/et_nums"
        android:id="@+id/btn_cell"
        android:layout_width="35dp"
        android:layout_height="35dp" />
    <Button
        android:id="@+id/btn_addnotes"
        android:visibility="gone"
        android:layout_marginBottom="3dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:textColor="#ffff8904"
        android:textSize="12sp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/btn_gray_less"
        android:text="添加备注"
        android:layout_width="70dp"
        android:layout_height="25dp" />

</RelativeLayout>