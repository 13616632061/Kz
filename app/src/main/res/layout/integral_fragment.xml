<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1.5"
            android:id="@+id/tv_bncode"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/bar_code"
            android:textSize="20dp"
            android:padding="5dp"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="@string/goods_name"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="20dp"
            android:padding="5dp"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/tv_price"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="@string/retail_price"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="20dp"
            android:padding="5dp"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/tv_integral"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/Exchange_points"
            android:textSize="20dp"
            android:padding="5dp"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/tv_nums"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="@string/Convertibility"
            android:textSize="20dp"
            android:padding="5dp"
            android:layout_margin="5dp"/>


        <TextView
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/edit"
            android:textSize="20dp"
            android:padding="5dp"
            android:layout_margin="5dp"/>


    </LinearLayout>
    <View
        android:background="#f4f4f4"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <ListView
        android:id="@+id/lv_integral"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <RelativeLayout

        android:background="@drawable/gray2"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="@string/common"
            android:textSize="16dp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_shuliang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_1"
            android:layout_centerVertical="true"
            android:hint="16"
            android:textSize="16dp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_zongliang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_shuliang"
            android:text="@string/member"
            android:layout_centerVertical="true"
            android:textSize="16dp" />
        <Button
            android:id="@+id/but_Newintegral"
            android:layout_toRightOf="@+id/tv_zongliang"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/but_fenlei"
            android:text="@string/New_convertible_goods" />


        <TextView
            android:visibility="gone"
            android:id="@+id/tv_zong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_zongliang"
            android:hint="19"
            android:layout_centerVertical="true"
            android:textSize="16dp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_zongjin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_zong"
            android:text="@string/Total_purchase_price"
            android:layout_centerVertical="true"
            android:textSize="16dp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_jinjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_zongjin"
            android:hint="2222"
            android:layout_centerVertical="true"
            android:textSize="16dp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_shoujia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_jinjia"
            android:hint="@string/Total_selling_price"
            android:layout_centerVertical="true"
            android:textSize="16dp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_zongshoujia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_shoujia"
            android:hint="111111"
            android:layout_centerVertical="true"
            android:textSize="16dp" />

        <!--android:background="@drawable/last"-->
        <Button
            android:id="@+id/but_next"
            android:text="@string/next_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />

        <TextView
            android:id="@+id/tv_page"
            android:layout_width="70dp"
            android:background="@drawable/fubeijin"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/but_next"
            android:layout_toLeftOf="@+id/but_next"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:hint="1/5"
            android:textSize="16dp" />
        <!--android:background="@drawable/next"-->
        <Button
            android:id="@+id/but_last"
            android:text="@string/previous_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv_page"
            />

        <Button
            android:visibility="gone"
            android:id="@+id/but_tolead"
            android:onClick="but_import"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/but_last"
            android:background="@drawable/but_fenlei"
            android:text="@string/Export_template" />

        <Button
            android:visibility="gone"
            android:id="@+id/but_derive"
            android:onClick="but_export"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/but_tolead"
            android:background="@drawable/but_fenlei"
            android:text="@string/Import_member" />


    </RelativeLayout>

</LinearLayout>