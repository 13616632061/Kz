<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_bncode"
            android:text="@string/bar_code"
            android:textSize="16sp"
            android:textColor="@color/color333"
            android:layout_margin="5dp"
            android:gravity="center"
            android:layout_weight="1.2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_name"
            android:text="@string/goods_name"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textSize="16sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/color333"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_tagname"
            android:text="@string/classification"
            android:textSize="16sp"
            android:textColor="@color/color333"
            android:ellipsize="end"
            android:singleLine="true"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_nums"
            android:text="@string/Quantity_of_goods_reported"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="16sp"
            android:textColor="@color/color333"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_before_nums"
            android:text="@string/Acceptance_quantity"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="16sp"
            android:textColor="@color/color333"
            android:layout_height="match_parent" />
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_price"
            android:text="@string/price"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/but_acceptance"
            android:text="@string/acceptance"
            android:textSize="16sp"
            android:textColor="@color/color333"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </LinearLayout>


</LinearLayout>