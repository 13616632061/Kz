<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="onclick"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colormain">

        <ImageView
            android:id="@+id/im_beiyong"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="onclick"
            android:padding="10dp"
            android:src="@drawable/huanghui" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/reserve_fund"
            android:textColor="#fff"
            android:textSize="30dp" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/ll_reserve"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:background="@drawable/login"
        android:orientation="vertical">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:text="@string/Please_enter_the_reserve_fund"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/ed_reserve"
            android:layout_width="300dp"
            android:inputType="numberDecimal"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/ed_beijin"
            android:hint="@string/Please_enter_the_reserve_fund"
            android:padding="10dp"
            android:textColorHint="#bebbbb" />

        <Button
            android:id="@+id/but_next"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:background="@drawable/logpng"
            android:onClick="onclick"
            android:paddingBottom="5dp"
            android:text="@string/next_page"
            android:textColor="#fff"
            android:textSize="16dp" />
    </LinearLayout>
</LinearLayout>