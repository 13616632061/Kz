<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/radius_shape_fff"
    android:layout_width="400dp"
    android:layout_height="200dp">

    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_width="400dp"
        android:layout_height="200dp">

    <LinearLayout
        android:layout_marginTop="50dp"
        android:background="@drawable/radius_shape_fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:layout_marginLeft="45dp"
            android:text="@string/numbers_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_marginLeft="30dp"
            android:layout_marginRight="5dp"
            android:textColor="#adadad"
            android:background="@drawable/btn_select_gray"
            android:textSize="20sp"
            android:text="ä¸€"
            android:id="@+id/btn_cell"
            android:layout_width="32dp"
            android:layout_height="32dp" />
        <EditText
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:lines="1"
            android:text="1"
            android:id="@+id/et_nums"
            android:background="@drawable/edit_frame"
            android:layout_width="60dp"
            android:layout_height="28dp" />
        <Button
            android:layout_marginLeft="20dp"
            android:textColor="#ffffff"
            android:background="@drawable/btn_select_red"
            android:textSize="20sp"
            android:text="+"
            android:id="@+id/btn_add"
            android:layout_width="32dp"
            android:layout_height="32dp" />
    </LinearLayout>

    <Button
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:textSize="18sp"
        android:background="@drawable/btn_gray_less"
        android:layout_marginLeft="60dp"
        android:id="@+id/btn_cell_dialog"
        android:text="@string/cancel"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />
    <Button
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:background="@drawable/btn_red"
        android:layout_marginLeft="60dp"
        android:layout_toRightOf="@+id/btn_cell_dialog"
        android:id="@+id/btn_sure_dialog"
        android:text="@string/confirm"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />

    </RelativeLayout>
</RelativeLayout>