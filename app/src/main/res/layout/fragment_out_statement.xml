<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_data"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <RelativeLayout
            android:background="#666666"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_time"
                android:layout_marginLeft="10dp"
                android:text="今日数据"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="出库单"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:textSize="22dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_zong"
                android:textSize="22dp"
                android:text="￥0"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:textColor="@color/colormain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </RelativeLayout>
        <View
            android:background="#ffffff"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:background="#666666"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:text="入库单"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:textSize="22dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_micro"
                android:textSize="22dp"
                android:text="￥0"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:textColor="@color/colormain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>


    </LinearLayout>



    <LinearLayout
        android:id="@+id/ll_Title"
        android:layout_below="@+id/ll_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="序号"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text="订单号"
            android:textSize="18dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text="下单时间"
            android:textSize="18dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text="收银员"
            android:textSize="18dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text="类型"
            android:textSize="18dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text="金额"
            android:textSize="18dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_seek"
            android:text="筛选"
            android:textSize="18dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <ListView
        android:layout_below="@+id/ll_Title"
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:background="#f1f1f1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/but_next"
            android:text="下一页"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_page"
            android:layout_toLeftOf="@+id/but_next"
            android:text="1/1"
            android:background="#ffffff"
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_centerVertical="true"
            android:layout_height="30dp" />

        <Button
            android:id="@+id/but_previous"
            android:text="上一页"
            android:layout_toLeftOf="@+id/tv_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:visibility="gone"
            android:layout_toLeftOf="@+id/but_previous"
            android:text="对账导出"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/but_fenlei"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />


    </RelativeLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_below="@+id/ll_Title"
        android:id="@+id/ll_xiangcitem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_delete"
                android:text="x"
                android:textSize="30dp"
                android:textColor="#ff0000"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="@drawable/fubeijin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="流水号："
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/tv_serial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15555555555"
                        android:textSize="18dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="时间："
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/tv_lei_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15555555555"
                        android:textSize="18dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="类型："
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/tv_lei_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="出库"
                        android:textSize="18dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="操作员："
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/tv_lei_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15555555555"
                        android:textSize="18dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="备注："
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/tv_beizhu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="没有备注"
                        android:textSize="18dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/fubeijin"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_margin="5dp"
                        android:id="@+id/tv_name"
                        android:gravity="center"
                        android:layout_weight="2"
                        android:text="名字"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />



                    <TextView
                        android:layout_margin="5dp"
                        android:id="@+id/tv_code"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:layout_weight="2"
                        android:text="条码"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_margin="5dp"
                        android:id="@+id/tv_supplier"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:text="供应商"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:layout_margin="5dp"
                        android:id="@+id/tv_inout"
                        android:gravity="center"
                        android:layout_weight="2"
                        android:text="出入库数量"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:layout_margin="5dp"
                        android:id="@+id/tv_cost"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:text="价格"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>
                <View
                    android:background="@color/color_fefefe"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

                <widget.MylistView
                    android:id="@+id/lv_details"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <Button
                        android:id="@+id/but_print"
                        android:layout_toLeftOf="@+id/but_refund"
                        android:text="打印"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <Button
                        android:visibility="gone"
                        android:layout_marginRight="10dp"
                        android:id="@+id/but_refund"
                        android:text="反结账"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>